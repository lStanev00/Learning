            <section id="catalog">
                <div class="band">
                    {{#if movies.length}}
                        {{#each movies}}
                            <div class="flip flip-vertical">
                                <div class="front">
                                    <img src="{{imgURL}}"
                                        alt="{{title}}">
                                </div>
                                <div class="back">
                                    <h1>{{title}}</h1>
                                    <h2>Genre: {{genre}}</h2>
                                    <p>Description: {{description}}</p>
                                    <a href="/details/{{_id}}" class="details">Details</a>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <div class="no-posts">
                            <p class="no-offer">There are no posts yet...</p>
                        </div>
                    {{/if}}
                </div>
            </section>
        </main>