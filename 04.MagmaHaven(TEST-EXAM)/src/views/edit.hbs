{{#if error}}
            {{#each error}}
                <div>
                    <div class="errorContainer">
                        <p>{{this.message}}</p>
                    </div>
                </div>
            {{/each}}
        {{/if}}

        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Announcement</h1>
                <form method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{vol.name}}">
                    <label>Location:</label>
                    <input type="text" id="location" name="location" value="{{vol.location}}">
                    <label>Elevation:</label>
                    <input type="number" id="elevations" name="elevation" value="{{vol.elevation}}">
                    <label>Year of Last Eruption:</label>
                    <input type="number" id="last-year-eruption" name="lastEruption" value="{{vol.lastEruption}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{vol.image}}">
                    <label>Volcano Type:</label>
                    <select id="type" name="typeVolcano" value="{{vol.typeVolcano}}">{{vol.typeVolcano}} 
                        <option value="Supervolcanoes">Supervolcanoes</option>
                        <option value="Submarine" selected>Submarine</option>
                        <option value="Subglacial">Subglacial</option>
                        <option value="Mud">Mud</option>
                        <option value="Stratovolcanoes">Stratovolcanoes</option>
                        <option value="Shield">Shield</option>
                    </select>
                    <label>Description:</label>
                    <textarea id="description" name="description" placeholder="...">{{vol.description}}</textarea>
                    <input type="submit" id="btn" value="Submit"></input>
                </form>
            </div>
        </section>