<section id="details-info">
        <h1>Details</h1>
            <div class="volcano-image">
                <img src="{{vol.image}}">
            </div>

            <div class="volcano-info">
                <div class="volcano-text">
                    <h1 id="name">{{vol.name}}</h1>
                    <h3 id="location">Location: {{vol.location}}</h3>
                    <p id="type">Volcano Type: {{vol.typeVolcano}}</p>
                    <p id="elevation"><span>Elevation: {{vol.elevation}}</span></p>
                    <p id="last-eruption">Year of Last Eruption: {{vol.lastEruption}}</p>
                    <p id="votes">Vote's Count: {{vol.voteList.length}}</p>
                    <p id="description">{{vol.description}}</p>
                </div>
                <div class="product-btn">
                    {{#if user}}
                        {{#if owner}}
                            <div class="author">
                                <a href="/edit/{{vol._id}}" class="btn-edit">Edit</a>
                                <a href="/delete/{{vol._id}}" class="btn-delete">Delete</a>
                            </div>
                        {{else}}
                            {{#if voted}}
                                <p class="vote-message">You've already voted for this volcano!</p>
                            
                            {{else}}
                                <a href="/vote/{{vol._id}}" class="btn-vote">Vote</a>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                </div>
            </div>
</section>