        {{#if error}}
        <div>
            <div class="errorContainer">
            {{#each error}}
                <p>{{this.message}}</p>
            {{/each}}
            </div>
        </div>
        {{/if}}

        {{#if data}}
                <section id="create-container">
            <div class="create-container-info">
                <h1>Create Event</h1>
                <form method="POST">
                    <label>Name of the Disaster:</label>
                    <input value="{{data.name}}" type="text" id="name" name="name" placeholder="...">
                    <label>Type of Disaster:</label>
                    <select value="{{data.type}}" id="type" name="type"> {{data.type}}
                        <option value="Wildfire">Wildfire</option>
                        <option value="Flood">Flood</option>
                        <option value="Earthquake">Earthquake</option>
                        <option value="Hurricane">Hurricane</option>
                        <option value="Drought">Drought</option>
                        <option value="Tsunami">Tsunami</option>
                        <option value="Other">Other</option>
                    </select>
                    <label>Year of the Event:</label>
                    <input value="{{data.year}}" type="number" id="year" name="year" placeholder="...">
                    <label>Location:</label>
                    <input value="{{data.location}}" type="text" id="location" name="location" placeholder="...">
                    <label>Image:</label>
                    <input value="{{data.image}}" type="text" id="image" name="image" placeholder="http://...">
                    <label>Description:</label>
                    <textarea id="description" name="description" placeholder="...">{{data.description}}</textarea>
                    <input type="submit" id="btn" value="Submit"></input>
                                    </form>
            </div>
        </section>

        {{else}}
