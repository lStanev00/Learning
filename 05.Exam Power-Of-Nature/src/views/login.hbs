        {{#if error}}
        <div>
            <div class="errorContainer">
                <p>Bad input. Please check the fields again.</p>
            </div>
        </div>
        {{/if}}
        <div class="login-box">
            <h1>Login</h1>
            <form method="POST">
                <label>Email</label>
                <input {{#if email}} value="{{email}}"{{/if}} type="text" name="email" placeholder="Email..">
                <label>Password</label>
                <input type="password" name="password" placeholder="Password..">
                <input type="submit" value="Submit">
            </form>
            <p>Not have an account? <a href="/register">Register here</a></p>
        </div>